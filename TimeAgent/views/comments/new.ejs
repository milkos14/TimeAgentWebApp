<%-include("../partials/header")%>
     <div class="row"> 
        <h1 style="text-align: center;">Create a New step for <%= task.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/tasks/<%=task._id%>/comments" method="POST">
                <div class="form-group">   
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </form>
        </div>
        <a href="/tasks/<%=task._id%>">Go Back</a>
    </div>  
<%-include("../partials/footer")%>