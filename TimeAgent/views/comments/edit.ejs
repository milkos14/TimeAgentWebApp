<%-include("../partials/header")%>
     <div class="row"> 
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/tasks/<%= task_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
